{
    "name": "hoc",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^4",
        "express": "^4",
        "@sap/hana-client": "^2.6.61"
    },
    "devDependencies": {
        "sqlite3": "5.0.0"
    },
    "scripts": {
        "dbbuild": "cds build && cd ./db && npm start",
        "userbuild": "cds build && cd ./user_db && npm start",
        "srv": "cds build && cd ./srv && npm start",
        "env": "cp ./default-env.json ./db/default-env.json && cp ./default-env.json ./srv/default-env.json",
        "start": "cds run",
        "watch": "cds watch",
        "mocha": "npx mocha || echo",
        "jest": "npx jest --verbose",
        "test": "npm run jest -s",
        "build": "cds build/all --clean"
    },
    "cds": {
        "build": {
            "target": ".",
            "tasks": [
                {
                    "src": "db",
                    "for": "hana",
                    "options": {
                        "model": [
                            "db",
                            "srv"
                        ]
                    }
                },
                {
                    "src": "srv",
                    "for": "node-cf",
                    "options": {
                        "model": [
                            "db",
                            "srv"
                        ]
                    }
                }
            ]
        },
        "hana": {
            "deploy-format": "hdbtable"
        },
        "requires": {
            "db": {
                "kind": "hana"
            }
        }
    }
}
